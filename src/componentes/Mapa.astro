      padding: 1em;

      .enlaceMapa {
        display: block;
        cursor: pointer;

        &.ciudades,
        &.municipios {
          color: var(--colorCiudades);
        }

        &.departamentos {
          color: var(--colorDepartamentos);
        }

        &.paises {
          color: var(--colorPaises);
        }
      }
    }
  }
</style>
