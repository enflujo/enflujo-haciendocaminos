          const fuente = mapa.getSource('ubicaciones') as GeoJSONSource;

          fuente.setData(datosGeo);

          const primerPunto = datosGeo.features[0];

          if (primerPunto) {
            mapa.flyTo({
              center: primerPunto.geometry.coordinates as [number, number],
              essential: true
            });
          }

          return;
