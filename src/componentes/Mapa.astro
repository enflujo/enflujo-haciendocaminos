        if (!Object.keys(datosGeo).length) return;

        if (!contenedorMapa) return;

        if (!mapaCreado) {
          mapa = new mapbox.Map({
            container: contenedorMapa,
            style: estilo,
            zoom: 1,
            attributionControl: false
