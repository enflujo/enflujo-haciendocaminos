  <div class="espacioLogoIntroduccion">
    <img
      class="logoIntroduccion"
      src={`${import.meta.env.BASE_URL}/imgs/logo_antro_blanco.svg`}
      alt="Logo de introducción: 60 años, haciendo caminos"
    />
  </div>

  <div>
